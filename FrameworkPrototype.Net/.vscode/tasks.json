{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "process",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}/FrameworkPrototype.Net.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "clean",
            "type": "process",
            "command": "dotnet",
            "args": [
                "clean",
                "${workspaceFolder}/FrameworkPrototype.Net.sln"
            ],
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "test",
            "type": "process",
            "command": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/FrameworkPrototype.Net.sln"
            ],
            "group": "test",
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "coverage",
            "type": "shell",
            "command": "dotnet test --filter \"Category=UnitTest|Category=IntegrationTest\" ${workspaceFolder}/FrameworkPrototype.Net.sln /property:ExcludeByAttribute=GeneratedCodeAttribute /property:CollectCoverage=true /property:CoverletOutputFormat=\\\"json,lcov\\\" /property:CoverletOutput=${workspaceFolder}/coverage/ /property:MergeWith=${workspaceFolder}/coverage/coverage.json",
            "group": "test",
            "dependsOn": ["clean-coverage"],
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "clean-coverage",
            "type": "shell",
            "linux": {
                "command": "rm -f \"${workspaceFolder}/coverage/coverage.json\"",
            },
            "windows": {
                "command": "del \"${workspaceFolder}\\coverage\\coverage.json\"",
            },
            "presentation": {
                "reveal": "silent",
                "showReuseMessage": false
            },
            "problemMatcher": []
        },
        {
            "label": "run UnderstandingDependencyInjection.Net",
            "type": "shell",
            "command": "dotnet run --project \"${workspaceFolder}/UnderstandingDependencyInjection.Net/UnderstandingDependencyInjection.Net.csproj\"",
            "problemMatcher": []
        },
        {
            "label": "run WebAPIApplication.Net",
            "type": "shell",
            "command": "dotnet run --project \"${workspaceFolder}/WebAPIApplication.Net/WebAPIApplication.Net.csproj\"",
            "problemMatcher": []
        }
    ]
}