{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "process",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}/FrameworkPrototype.Net.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "clean",
            "type": "process",
            "command": "dotnet",
            "args": [
                "clean",
                "${workspaceFolder}/FrameworkPrototype.Net.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "test",
            "type": "process",
            "command": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/FrameworkPrototype.Net.sln"
            ],
            "group": "test",
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "coverage-clean",
            "type": "shell",
            "command": "rm -f \"${workspaceFolder}/coverage/coverage.json\"",
            "presentation": {
                "reveal": "silent",
                "showReuseMessage": false
            },
            "problemMatcher": []
        },
        {
            "label": "coverage",
            "type": "process",
            "command": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/FrameworkPrototype.Net.sln",
                "/property:ExcludeByAttribute=\"GeneratedCodeAttribute\"",
                "/property:CollectCoverage=true",
                "/property:CoverletOutputFormat=\"json,lcov\"",
                "/property:CoverletOutput=${workspaceFolder}/coverage/",
                "/property:MergeWith=${workspaceFolder}/coverage/coverage.json"
            ],
            "group": "test",
            "dependsOn": ["coverage-clean"],
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "run UnderstandingDependencyInjection.Net",
            "type": "shell",
            "command": "dotnet run --project \"${workspaceFolder}/UnderstandingDependencyInjection.Net/UnderstandingDependencyInjection.Net.csproj\"",
            "problemMatcher": []
        },
        {
            "label": "run WebAPIApplication.Net",
            "type": "shell",
            "command": "dotnet run --project \"${workspaceFolder}/WebAPIApplication.Net/WebAPIApplication.Net.csproj\"",
            "problemMatcher": []
        }
    ]
}