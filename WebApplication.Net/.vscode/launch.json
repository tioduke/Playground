{
    "version": "0.2.0",
    "configurations": [

        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/WebApplication.Net/bin/Debug/netcoreapp5.0/WebApplication.Net.dll",
            "args": [],
            "cwd": "${workspaceFolder}/WebApplication.Net",
            "console": "internalConsole",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}/Customers/Customer",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}
